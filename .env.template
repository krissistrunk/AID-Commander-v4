# AID Commander v4.0 Configuration Template

# Core Settings
AID_COMMANDER_VERSION=4.0.0
AID_COMMANDER_MODE=hybrid
AID_LOG_LEVEL=INFO
AID_DATA_DIR=~/.aid_commander

# Memory Bank Settings
MEMORY_BANK_ENABLED=true
MEMORY_BANK_MAX_SIZE_MB=1000
MEMORY_BANK_ENCRYPTION=true
MEMORY_SEARCH_ENGINE=sqlite_fts
MEMORY_CACHE_TTL=3600

# AI Provider Settings
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
AZURE_COGNITIVE_KEY=your_azure_key_here
AI_DEFAULT_PROVIDER=openai
AI_CONFIDENCE_THRESHOLD=85
AI_CONTEXT_MAX_TOKENS=8000

# Quality Gates Settings
QUALITY_GATES_ENABLED=true
QUALITY_GATES_STRICT_MODE=false
QUALITY_GATES_AUTO_FIX=true
QUALITY_SUCCESS_THRESHOLD=95

# Performance Settings
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200
DATABASE_URL=sqlite:///~/.aid_commander/aid_commander.db

# Security Settings
SECRET_KEY=your_secret_key_here
ENCRYPT_MEMORY_BANK=true
API_RATE_LIMIT=100

# Development Settings
DEBUG_MODE=false
PERFORMANCE_MONITORING=true
TELEMETRY_ENABLED=true